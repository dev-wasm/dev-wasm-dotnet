{
    "name": "Dotnet WASM",
    "image": "mcr.microsoft.com/dotnet/sdk:8.0",
    "remoteEnv": {
	    "PATH": "${containerEnv:PATH}:/usr/local/lib/wasi-sdk-20.0/bin:/usr/local/lib",
        "WASI_SDK_PATH": "/usr/local/lib/wasi-sdk-20.0"
    },
    "containerEnv": {
        "WASI_SDK_PATH": "/usr/local/lib/wasi-sdk-20.0"
    },
    "features": {
        "devwasm.azurecr.io/dev-wasm/dev-wasm-feature/wasmtime-wasi:0.0.13": {
            "version": "20",
            "wasmtime_version": "v15.0.1",
            "wit_version": "0.16.0"
        },
        "ghcr.io/devcontainers/features/common-utils": {}
    },
    "postCreateCommand": "apt-get install -y libxml2",
    "customizations": {
        "vscode": {
	    "extensions": [ "ms-dotnettools.csharp" ]
        }
    }
}
